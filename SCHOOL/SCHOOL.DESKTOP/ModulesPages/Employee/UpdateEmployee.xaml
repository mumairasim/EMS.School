                    <Label Grid.Column="2" Grid.Row="10" Content="Nationality" Margin="5.2,10.2,11.967,79.6" Grid.RowSpan="2"/>
                    <TextBox Grid.Column="2" Grid.Row="10" BorderBrush="DarkGray" Height="30" HorizontalAlignment="Left" Margin="5.2,30.2,0,0" x:Name="ParentNationality" VerticalAlignment="Top" Width="273" BorderThickness="1" Grid.ColumnSpan="2" />
