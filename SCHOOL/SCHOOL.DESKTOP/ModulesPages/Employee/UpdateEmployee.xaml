                    <RadioButton Grid.Column="1" Grid.Row="3" BorderBrush="DarkGray" Height="30" HorizontalAlignment="Left" Margin="49.6,30.2,0,0" x:Name="MaleGender" VerticalAlignment="Top" Width="50" BorderThickness="1" Grid.RowSpan="2" />
