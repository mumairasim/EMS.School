                    <Label Grid.Column="1" Grid.Row="3" Content="Other" Margin="199.6,35.2,254.967,0" Grid.ColumnSpan="2"/>
                    <RadioButton Grid.Column="1" Grid.Row="3" BorderBrush="DarkGray" Height="30" HorizontalAlignment="Left" Margin="259.6,30.2,0,0" x:Name="OtherGender" VerticalAlignment="Top" Width="50" BorderThickness="1" Grid.RowSpan="2" />
