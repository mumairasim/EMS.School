                    <Label Grid.Column="0" Grid.Row="6" Content="Present Address" Margin="5,9.8,0.4,0.6"/>
                    <RichTextBox Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="3" BorderBrush="DarkGray" Height="71" HorizontalAlignment="Left" Margin="5,28.8,0,0" x:Name="PresentAddress" VerticalAlignment="Top" Width="941" BorderThickness="1" />
                    <Label Grid.Column="0" Grid.Row="7" Content="Permanent Address" Margin="5,8.4,0.4,1"/>
                    <RichTextBox Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="3" BorderBrush="DarkGray" Height="71" HorizontalAlignment="Left" Margin="5,27.4,0,0" x:Name="PermanentAddress" VerticalAlignment="Top" Width="941" BorderThickness="1" />
                    <Label Grid.Row="8" Content="Parent/Guardian Information" FontSize="30" FontWeight="SemiBold" Foreground="#555F78" Height="55" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalAlignment="Top" Width="435" Margin="311,4,0,0" Grid.ColumnSpan="3" Grid.Column="0" Grid.RowSpan="2" />
                    <Label Grid.Column="0" Grid.Row="9" Content="Parent/Guardian Name" Margin="5,8.4,0.4,60.6" Grid.RowSpan="2"/>
                    <TextBox Grid.Column="0" Grid.Row="9" BorderBrush="DarkGray" Margin="5,28.4,0,0" Height="30" HorizontalAlignment="Left"  x:Name="ParentName" VerticalAlignment="Top" Width="323" BorderThickness="1" />
