                    <Label Grid.Column="1" Grid.Row="12" Content="Mobile1" Margin="4.6,10.4,254.967,10.4" Grid.ColumnSpan="2"/>
                    <TextBox Grid.Column="1" Grid.Row="12" BorderBrush="DarkGray" Height="30" HorizontalAlignment="Left" Margin="4.6,30.4,0,0" x:Name="Mobile1" VerticalAlignment="Top" Width="323" BorderThickness="1" />
                    <Label Grid.Column="2" Grid.Row="12" Content="Mobile2" Margin="5.2,10.4,11.967,10.4"/>
                    <TextBox Grid.Column="2" Grid.Row="12" BorderBrush="DarkGray" Height="30" HorizontalAlignment="Left" Margin="5.2,30.4,0,0" x:Name="Mobile2" VerticalAlignment="Top" Width="273" BorderThickness="1" Grid.ColumnSpan="2" />
                    <Label Grid.Column="0" Grid.Row="13" Content="Emergency Contact" FontSize="30" FontWeight="SemiBold" Foreground="#555F78" Height="55" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalAlignment="Top" Width="435" Margin="311,5.6,0,0" Grid.ColumnSpan="3" Grid.RowSpan="2" />
                    <Label Grid.Column="0" Grid.Row="14" Content="Name" Margin="5,11,0.4,0.8"/>
                    <TextBox Grid.Column="0" Grid.Row="14" BorderBrush="DarkGray" Height="30" HorizontalAlignment="Left" Margin="5,31,0,0" x:Name="Name" VerticalAlignment="Top" Width="323" BorderThickness="1" Grid.RowSpan="2" />
