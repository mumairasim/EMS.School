<Page x:Class="SCHOOL.DESKTOP.ModulesPages.Student.StudentBase"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SCHOOL.DESKTOP.ModulesPages.Student"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StudentBase">

    <Grid>
        <DockPanel>
            <Grid DockPanel.Dock="Top">
                <StackPanel>
                    <TextBox MinWidth="100" MinHeight="30" Margin="495,10,40,10" BorderThickness="1" BorderBrush="Black"/>
                    <Button Click="SearchStudents" Margin="663,0,40,10" Content="Search" RenderTransformOrigin="0.512,0.525" Height="30"/>
                </StackPanel>
            </Grid>
            <Grid Margin="0,30,0,0" DockPanel.Dock="Bottom" >
                <DataGrid x:Name="StudentDataGrid" HorizontalAlignment="Left" VerticalAlignment="Top" CanUserAddRows="False" AutoGenerateColumns="True" >
                </DataGrid>
            </Grid>
        </DockPanel>
    </Grid>
</Page>
