<Window x:Class="SCHOOL.DESKTOP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCHOOL.DESKTOP"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="SMS" Height="720" Width="1320" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TabControl Height="690" VerticalAlignment="Top" Width="1315" DockPanel.Dock="Left" TabStripPlacement="Left" BorderBrush="{x:Null}">
            <TabItem Header="Dashboard" Width="200" Height="45" FontSize="18" Margin="0" BorderBrush="{x:Null}">
                <Grid Background="#E2E5E7">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="86*"/>
                        <RowDefinition Height="85*"/>
                    </Grid.RowDefinitions>
                </Grid>
            </TabItem>
            <TabItem x:Name="StudentTab" Header="Student" Width="200" Height="45" FontSize="18" Margin="0" BorderBrush="{x:Null}" MouseDown="StudentTab_MouseDown">
                <Grid Background="#E2E5E7">
                    <TabControl>
                        <TabItem x:Name="SearchStudent" Header="Search Student ">
                            <Grid>
                                <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Items}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                                        <DataGridTemplateColumn Header="Icon">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <materialDesign:PackIcon Kind="{Binding IconKind}"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>
                        <TabItem x:Name="AddStudent" Header="Add Student ">
                            <DockPanel>
                                <Grid DockPanel.Dock="Top">
                                    <StackPanel>
                                        <Label Name="Heading" Content="Add Student"></Label>
                                    </StackPanel>
                                    <Label Name="SubHeading" Content="Student Information"></Label>
                                </Grid>
                            </DockPanel>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem x:Name="ClassTab" Header="Class" Width="200" Height="45" FontSize="18" Margin="0" BorderBrush="{x:Null}" MouseDown="ClassTab_MouseDown">
                <Grid Background="#E2E5E7">
                    <TabControl>
                        <TabItem x:Name="SearchClass" Header="Search Class ">
                            <Grid>
                                <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding classList}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                                        <DataGridTextColumn Header="Name" Binding="{Binding ClassName}"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>
                        <TabItem x:Name="AddClass" Header="Add Class ">
                            <DockPanel>
                                <Grid DockPanel.Dock="Top">
                                    <StackPanel>
                                        <Label Name="AddClassHeading" Content="Add Class"></Label>
                                    </StackPanel>
                                    <Label Name="AddClassSubHeading" Content="Class Information"></Label>
                                </Grid>
                            </DockPanel>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>